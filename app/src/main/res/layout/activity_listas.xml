<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".activity.NovaListaActivity">

    <TextView
        android:id="@+id/txtTituloLista"
        android:layout_width="@dimen/dimen_dp_300"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_10"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:gravity="center"
        android:hint="@string/hint_nova_lista"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/dimen_sp_30" />

    <TextView
        android:id="@+id/txtHintCategoria"
        android:gravity="center"
        android:layout_width="@dimen/dimen_dp_400"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_5"
        android:layout_marginTop="@dimen/dimen_dp_10"
        android:text="@string/txt_categoria"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/darker_gray" />

    <ListView
        android:id="@+id/lvCategoria"
        android:layout_width="@dimen/dimen_dp_400"
        android:layout_height="wrap_content"
        android:divider="@null" />

</LinearLayout>
