<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:layout_marginBottom="@dimen/dimen_dp_10"
        android:text="@string/minhas_listas"
        android:id="@+id/textView"
        android:textSize="@dimen/dimen_sp_30"/>

    <ListView
        android:id="@+id/lvListas"
        android:layout_width="@dimen/dimen_dp_300"
        android:layout_height="@dimen/dimen_dp_400"
        android:background="@drawable/btn_design_white"></ListView>

    <Button
        android:id="@+id/btnAddLista"
        android:layout_width="@dimen/dimen_dp_300"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:background="@drawable/btn_design"
        android:text="@string/btn_add_lista"
        android:onClick="toNovaLista"
        android:textColor="@android:color/white"/>

</LinearLayout>
